#!/bin/sh

uhd=$(xrandr | grep "3840x")
qhd=$(xrandr | grep "HDMI-2 connected")

if [ -n "$(xrandr | grep "eDP-1-1")" ]; then
  eDP1="eDP-1-1"
  DP1="DP-1-2"
  HDMI2="HDMI-1-2"
else
  eDP1="eDP-1"
  DP1="DP-1"
  HDMI2="HDMI-2"
fi

MONO_FONT_NAME="JetBrains Mono NL Light"
MONO_FONT_SIZE=11
TERMINAL_FONT_SIZE=13
DPI=96
PANEL="panel-0"
PANEL_SIZE=24
PANEL_OUTPUT=$eDP1

if [ -n "$uhd" ]; then
  MONO_FONT_SIZE=12
  TERMINAL_FONT_SIZE=14
  DPI=122
  PANEL_SIZE=32
  PANEL_OUTPUT=$DP1
  dp2=$(xrandr | grep "DP-2 connected.*3840x")
  if [ -n "$dp2" ]; then
    PANEL_OUTPUT="DP-2"
  fi
  xrandr \
  --fb 5760x2160 \
  --output $eDP1 --mode 1920x1080 --scale 1x1 --panning 1920x1080+0+0 --rate 120 \
  --output $PANEL_OUTPUT --mode 3840x2160 --scale 1x1 --panning 3840x2160+1920+0 --rate 60 \
  --right-of $eDP1 --primary
elif [ -n "$qhd" ]; then
  PANEL_OUTPUT=$HDMI2
  xrandr \
  --fb 4480x1440 \
  --output $eDP1 --mode 1920x1080 --scale 1x1 --panning 1920x1080+0+0 --rate 120 \
  --output $HDMI2 --mode 2560x1440 --scale 1x1 --panning 2560x1440+1920+0 --rate 60 \
  --right-of $eDP1 --primary
else
  xrandr \
  --fb 1920x1080 \
  --output $eDP1 --mode 1920x1080 --scale 1x1 --panning 1920x1080+0+0 --rate 120 \
  --output $DP1 --off \
  --output $HDMI2 --off
fi

xfconf-query -c xfce4-panel -p "/panels/$PANEL/size" -s "$PANEL_SIZE" > /dev/null 2>&1
if [ $? -ne 0 ]; then
  PANEL="panel-1"
  xfconf-query -c xfce4-panel -p "/panels/$PANEL/size" -s "$PANEL_SIZE"
fi
xfconf-query -c xfce4-panel -p "/panels/$PANEL/size" -s "$PANEL_SIZE"
xfconf-query -c xfce4-panel -p "/panels/$PANEL/output-name" -s "$PANEL_OUTPUT"
xfconf-query -c xsettings -p /Xft/DPI -s "$DPI"
xfconf-query -c xsettings -p /Gtk/MonospaceFontName -s "$MONO_FONT_NAME $MONO_FONT_SIZE"
sed -i "s#FontName=.*#FontName=$MONO_FONT_NAME $TERMINAL_FONT_SIZE#" ~/.config/xfce4/terminal/terminalrc
