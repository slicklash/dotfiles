set previewer ~/.config/lf/lf-preview
set cleaner ~/.config/lf/lf-cleaner

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd tmuxp ${{
  tmux select-pane -l
}}

cmd m1 ${{
  lf -remote "send $id set nopreview"
  lf -remote "send $id set ratios 1"
  lf -remote "send $id set info size:time"
}}

cmd thunar ${{
  thunar "$f"
}}

# unmap
map d

# map
map M m1
map <c-h> tmuxp
map <c-l> tmuxp
map dd delete
map x cut
map y copy
map <enter> open
map R reload
map D mkdir
map N mkfile
map . set hidden!
map E thunar

map gh cd ~
map gc cd ~/code
map gd cd ~/Downloads
map ge cd ~/Desktop
map gv cd ~/Videos
map gs cd ~/Sync
map gw cd ~/SyncWork
