# This is the configuration file for Ghostty (https://ghostty.org/docs/config)
#
# reload: (macOS: Command + Shift + comma
#          other: Control + Shift + comma)

# ghostty +list-themes
theme = Nordfox

background = #262626
window-decoration = server

# ghostty +list-fonts
font-family = JetBrainsMono NFM Light
font-size = 15
font-feature = -dlig
font-feature = -liga
font-feature = -calt
font-synthetic-style = false

# ghostty +list-keybinds
keybind = super+a=unbind
keybind = super+d=unbind
keybind = super+h=unbind

# change cmd -> ctrl v1.3.0 or 89e9562 commit
key-remap = super=ctrl

# <Alt-a> <Alt-d>
keybind = opt+a=text:\x1ba
keybind = opt+d=text:\x1bd
keybind = opt+s=text:\x1b[1;2P
